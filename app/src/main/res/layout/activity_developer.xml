<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actvities.DeveloperActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="144dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/programming" />

                <TextView
                    android:id="@+id/lblincome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Developer"
                    android:textColor="#3a32a8"
                    android:textSize="50sp" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Mudasir Ahmed"
                    android:textColor="#F70707"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rollno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="18SW68"
                    android:textColor="#F70707"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="ahmedmudassir392@gmail.com"
                    android:textColor="#F70707"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="MUET Jamshoro"
                    android:textColor="#F70707"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Contact"
                    android:textColor="#070707"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="#F9392B" />




            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>